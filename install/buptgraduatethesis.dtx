FUNCTION {generate.bibitem.begin} {
  newline$
  "\bibitem{" write$
  cite$ write$
  "}" write$ newline$

  % 在栈顶压入""，作为 output.state 为 state.before.bibitem 时的输出
  ""
  state.before.bibitem 'output.state :=
}

